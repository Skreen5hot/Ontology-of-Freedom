@prefix ex: <http://example.org/moral_sandbox#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

#################################################################
# NEW "UNRESOLVED" SCENARIOS
#################################################################

# --- New Agents ---
ex:AgentBob a ex:Agent ;
    rdfs:label "Bob" .

ex:AgentCharlie a ex:Agent ;
    rdfs:label "Charlie" .

ex:SecurityGuardSarah a ex:Agent ;
    rdfs:label "Sarah the Security Guard" .

ex:OwnerDave a ex:Agent ;
    rdfs:label "Dave" .

# --- New Artifacts ---
ex:DavesBicycle a ex:Artifact ;
    ex:ownedBy ex:OwnerDave ;
    rdfs:label "Dave's Bicycle" .

ex:BankVault a ex:Artifact ;
    rdfs:label "The Bank Vault" .

# --- New Intents ---
ex:Intent_ToSteal a ex:Intent ;
    rdfs:label "Intent to steal" .

ex:Intent_ToBorrow a ex:Intent ;
    rdfs:label "Intent to borrow" .

ex:Intent_ToSecure a ex:Intent ;
    rdfs:label "Intent to secure" .

# --- New Action Instances (Unevaluated) ---

# Scenario 1: An action that SHOULD be classified as Theft.
# It has the right intent and the performer is not the owner.
ex:Action_TakeBike_Steal a ex:Action ;
    rdfs:label "Bob takes Dave's bicycle to keep" ;
    ex:performedBy ex:AgentBob ;
    ex:actsOn ex:DavesBicycle ;
    ex:realizesIntent ex:Intent_ToSteal .

# Scenario 2: An action that should NOT be classified as Theft.
# The intent is different.
ex:Action_TakeBike_Borrow a ex:Action ;
    rdfs:label "Charlie takes Dave's bicycle to borrow" ;
    ex:performedBy ex:AgentCharlie ;
    ex:actsOn ex:DavesBicycle ;
    ex:realizesIntent ex:Intent_ToBorrow .

# Scenario 3: An action that SHOULD be classified as fulfilling an obligation.
ex:Action_SecureVault a ex:Action ;
    rdfs:label "Sarah locks the bank vault" ;
    ex:performedBy ex:SecurityGuardSarah ;
    ex:actsOn ex:BankVault ;
    ex:realizesIntent ex:Intent_ToSecure .


#################################################################
# COPIED RULES & DEFINITIONS (The "Laws of the World")
#################################################################

# --- Moral Values ---
ex:Fairness a ex:Value ; rdfs:label "Fairness" .
ex:Trust a ex:Value ; rdfs:label "Trust" .
ex:RespectForProperty a ex:Value ; rdfs:label "Respect for Property" .
ex:Honesty a ex:Value ; rdfs:label "Honesty" .
ex:RespectForLife a ex:Value ; rdfs:label "Respect for Life" .
ex:Justice a ex:Value ; rdfs:label "Justice" .

# --- Action Classes ---
ex:Theft a owl:Class ;
    rdfs:subClassOf ex:Action ;
    rdfs:label "Theft" .

ex:ActOfRestitution a owl:Class ;
    rdfs:subClassOf ex:Action ;
    rdfs:label "Act of Restitution" .

ex:Killing a owl:Class ;
    rdfs:subClassOf ex:Action ;
    rdfs:label "Killing" .

ex:Murder rdfs:subClassOf ex:Killing .
ex:StateExecution rdfs:subClassOf ex:Killing .

ex:PreserveSharedResources a owl:Class ;
    rdfs:subClassOf ex:LabSecurityAction .

ex:LabSecurityAction a owl:Class ;
    rdfs:subClassOf ex:Action ;
    rdfs:label "Preserve Shared Resources" .

# --- Moral Frameworks and Rules ---
ex:USLaw a ex:MoralFramework ;
    rdfs:label "U.S. Law" ;
    ex:hasRule ex:USLaw_Rule_Theft, ex:USLaw_Rule_Murder .

ex:LabPolicy a ex:MoralFramework ;
    rdfs:label "Lab Policy" ;
    ex:hasRule ex:LabPolicy_Rule_Locking .

ex:LabPolicy_Rule_Locking a ex:MoralRule ;
    ex:appliesToClass ex:PreserveSharedResources ;
    ex:hasDeonticStatus "Obligatory" ;
    ex:justificationText "Preserving shared group resources is a high-priority obligation." .

ex:USLaw_Rule_Theft a ex:MoralRule ;
    ex:appliesToClass ex:Theft ;
    ex:hasDeonticStatus "Prohibited" ;
    ex:hasMoralJudgment "negative" ;
    ex:violatesValue ex:RespectForProperty, ex:Fairness ;
    ex:justificationText "Theft is the unlawful taking of property belonging to another." .

ex:USLaw_Rule_Murder a ex:MoralRule ;
    ex:appliesToClass ex:Murder ;
    ex:hasDeonticStatus "Prohibited" ;
    ex:hasMoralJudgment "negative" ;
    ex:violatesValue ex:RespectForLife ;
    ex:justificationText "Murder is the unlawful killing of a human being with malice aforethought." .

ex:TexasLaw a ex:MoralFramework ;
    rdfs:label "Texas Law" ;
    ex:hasRule ex:TexasLaw_Rule_Execution .

ex:TexasLaw_Rule_Execution a ex:MoralRule ;
    ex:appliesToClass ex:StateExecution ;
    ex:hasDeonticStatus "Permissible" ;
    ex:hasMoralJudgment "positive" ;
    ex:hasMoralValue ex:Justice ;
    ex:justificationText "State execution is a legal and just consequence for capital crimes under Texas law." .

ex:USLaw_Rule_Execution a ex:MoralRule ;
    ex:appliesToClass ex:StateExecution ;
    ex:hasMoralJudgment "positive" ;
    ex:hasMoralValue ex:Justice ;
    ex:justificationText "State execution is the lawful administration of justice for heinous crimes." .

ex:ChristianValues a ex:MoralFramework ;
    rdfs:label "Christian Values" ;
    ex:hasRule ex:ChristianValues_Rule_Theft, ex:ChristianValues_Rule_Execution .

ex:ChristianValues_Rule_Theft a ex:MoralRule ;
    ex:appliesToClass ex:Theft ;
    ex:hasDeonticStatus "Prohibited" ;
    ex:hasMoralJudgment "negative" ;
    ex:violatesValue ex:Honesty, ex:RespectForProperty ;
    ex:justificationText "This action violates the commandment 'Thou shalt not steal'." .

ex:ChristianValues_Rule_Execution a ex:MoralRule ;
    ex:appliesToClass ex:StateExecution ;
    ex:hasDeonticStatus "Prohibited" ;
    ex:hasMoralJudgment "negative" ;
    ex:violatesValue ex:RespectForLife ;
    ex:justificationText "This action violates the principle of 'Thou shalt not kill' and the sanctity of life." .

ex:AmnestyInternationalValues a ex:MoralFramework ;
    rdfs:label "Amnesty International Values" ;
    ex:hasRule ex:Amnesty_Rule_StateExecution .

ex:Amnesty_Rule_StateExecution a ex:MoralRule ;
    ex:appliesToClass ex:StateExecution ;
    ex:hasDeonticStatus "Prohibited" ;
    ex:hasMoralJudgment "negative" ;
    ex:violatesValue ex:RespectForLife ;
    ex:justificationText "The death penalty is the ultimate cruel, inhuman and degrading punishment." .

ex:CommonDecency a ex:MoralFramework ;
    rdfs:label "Common Decency" ;
    ex:hasRule ex:CommonDecency_Rule_Restitution .

ex:CommonDecency_Rule_Restitution a ex:MoralRule ;
    ex:appliesToClass ex:ActOfRestitution ;
    ex:hasDeonticStatus "Permissible" ;
    ex:hasMoralJudgment "positive" ;
    ex:hasMoralValue ex:Fairness, ex:Trust ;
    ex:justificationText "Returning a lost item to its owner is a fair and trustworthy action." .

#################################################################
# CLASSIFICATION RULES (The "Hybrid" part of the reasoner)
#################################################################

# Rule to classify an action as Theft
ex:TheftClassificationRule a ex:ClassificationRule ;
    rdfs:label "Rule to classify Theft" ;
    ex:classToAssign ex:Theft ;
    ex:requiresIntent ex:Intent_ToSteal ; # Changed to match new intent
    ex:requiresPerformerIsNotOwner "true"^^xsd:boolean .

# Rule to classify an action as an Act of Restitution
ex:RestitutionClassificationRule a ex:ClassificationRule ;
    rdfs:label "Rule to classify Act of Restitution" ;
    ex:classToAssign ex:ActOfRestitution ;
    ex:requiresIntent ex:Intent_Return ; # Kept old intent for reference
    ex:requiresPerformerIsNotOwner "true"^^xsd:boolean .

# Rule to classify an action as Killing (unlawful)
ex:UnlawfulKillingClassificationRule a ex:ClassificationRule ;
    rdfs:label "Rule to classify Unlawful Killing" ;
    ex:classToAssign ex:Murder ;
    ex:requiresIntent ex:Intent_Kill_Unlawful .

# Rule to classify an action as Killing (lawful)
ex:LawfulKillingClassificationRule a ex:ClassificationRule ;
    rdfs:label "Rule to classify Lawful Killing" ;
    ex:classToAssign ex:StateExecution ;
    ex:requiresIntent ex:Intent_Kill_Lawful .

ex:LockingClassificationRule a ex:ClassificationRule ;
    rdfs:label "Rule to classify locking as resource preservation" ;
    ex:classToAssign ex:LabSecurityAction ;
    ex:requiresArtifact ex:CommunalLab .

ex:PreservationClassificationRule a ex:ClassificationRule ;
    rdfs:label "Rule to further classify locking as resource preservation" ;
    ex:classToAssign ex:PreserveSharedResources ;
    ex:requiresAction ex:LockLab .

# A new classification rule for the bank vault scenario
ex:VaultSecurityClassificationRule a ex:ClassificationRule ;
    rdfs:label "Rule to classify vault locking as resource preservation" ;
    ex:classToAssign ex:PreserveSharedResources ;
    ex:requiresArtifact ex:BankVault .